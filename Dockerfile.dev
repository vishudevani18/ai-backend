FROM node:20-alpine
    
# Set working directory
WORKDIR /app

# Copy package files first (for caching)
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm install

# Copy the entire app source
COPY . .

# Expose the app port
EXPOSE 8080

# Command for development (NestJS or Express)
CMD ["npm", "run", "start:dev"]
