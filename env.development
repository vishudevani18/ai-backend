# =========================
# Core Application
# =========================
NODE_ENV=development
PORT=8080
BASE_URL=http://localhost:8080
GCP_PROJECT_ID=ai-photo-studio-18

# =========================
# Database (Local or Docker)
# =========================
# For Docker: Use DB_HOST=postgres (service name)
# For Local: Use DB_HOST=localhost
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=dev_user
DB_PASSWORD=dev@Party$18.v
DB_DATABASE=dev_db

# =========================
# Authentication / JWT
# =========================
JWT_SECRET=REPLACE_WITH_MIN_32_CHAR_SECRET
JWT_REFRESH_SECRET=REPLACE_WITH_MIN_32_CHAR_SECRET
JWT_EXPIRES_IN=1m
JWT_REFRESH_EXPIRES_IN=7d

# =========================
# OTP Configuration
# =========================
OTP_EXPIRY_MINUTES=2

# =========================
# Storage (GCS)
# =========================
STORAGE_PROVIDER=gcs
GCS_BUCKET_NAME=ai-photo-studio-18-app-storage
GCS_PROJECT_ID=ai-photo-studio-18
GCS_CDN_BASE_URL=https://storage.googleapis.com
GOOGLE_APPLICATION_CREDENTIALS=./gcs-service-account.json

# =========================
# Security
# =========================
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
CSRF_ENABLED=false
HELMET_ENABLED=true

# =========================
# Logging
# =========================
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# =========================
# Rate Limiting
# =========================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# =========================
# File Uploads
# =========================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

